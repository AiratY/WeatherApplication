<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/small_margin"
    android:paddingEnd="@dimen/small_margin">

    <TextView
        android:id="@+id/timeTextView"
        style="@style/dayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="00:00" />

    <TextView
        android:id="@+id/popTextView"
        style="@style/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="59%" />

    <ImageView
        android:id="@+id/iconTodayImageView"
        android:layout_width="50dp"
        android:layout_height="@dimen/weight_icon_today"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/desc_icon_forecast"
        app:srcCompat="@mipmap/ic_sunny" />

    <TextView
        android:id="@+id/tempItemTextView"
        style="@style/dayOfWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center"
        tools:text="10 Â°C" />
</LinearLayout>