<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingStart="@dimen/small_margin"
    android:paddingEnd="@dimen/small_margin"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/dayOfWeek"
        tools:text="00:00" />

    <TextView
        android:id="@+id/popTextView"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextView"
        app:layout_constraintBottom_toTopOf="@id/iconTodayImageView"
        tools:text="59%" />

    <ImageView
        android:id="@+id/iconTodayImageView"
        android:layout_width="50dp"
        android:layout_height="@dimen/weight_icon_today"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextView"
        app:srcCompat="@mipmap/ic_sunny"
        android:contentDescription="@string/desc_icon_forecast" />

    <TextView
        android:id="@+id/tempItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10 Â°C"
        android:layout_marginTop="@dimen/small_margin"
        style="@style/dayOfWeek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconTodayImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>