<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <TextView
        android:id="@+id/dayOfWeekTextView"
        style="@style/dayOfWeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_weight="50"
        tools:text="Вс, 2 окт." />

    <ImageView
        android:id="@+id/iconDayOfWeekImageView"
        android:layout_width="@dimen/weight_icon_day_of_week"
        android:layout_height="@dimen/weight_icon_day_of_week"
        android:contentDescription="@string/desc_icon_forecast"
        app:srcCompat="@mipmap/ic_sunny" />

    <TextView
        android:id="@+id/tempOfWeekTextView"
        style="@style/dayOfWeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_weight="50"
        android:gravity="end"
        tools:text="14/12 °C" />
</LinearLayout>