<resources >
    <!-- Base application theme. -->
    <style name="Theme.WeatherApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/coral</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coral</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="hint">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="title" parent="hint">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bold_title" parent="title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/coral</item>
    </style>

    <style name="value">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mainTemp">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dayOfWeek">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="usualButton" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/coral</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>